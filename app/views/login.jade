extends layout

block header
  link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css')

block content
  header
    h1.title Innlogging

  section
    form(method='post', action='/login', role='form')
      .form-group
        label(for='slug') Brukernavn
        input#slug.form-control(type='text', name='slug', placeholder='Linjeforeningsnavn')
      .form-group
        label(for='password') Passord
        input#password.form-control(type='password', name='password', placeholder='Passord')
      if login_error
        div.alert.alert-warning
           p Feil brukernavn eller passord
      .form-buttons
        button.btn.btn-primary(type='submit') Logg inn
        a.btn.btn-default(href='/reset-password') Glemt passord
